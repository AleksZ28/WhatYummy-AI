<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:startColor="#FFB0FF"
                android:endColor="#91FFFF"
                android:angle="315" />
            <stroke
                android:width="6dp"
                android:color="@color/halfwhite"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:startColor="#FFB0FF"
                android:endColor="#91FFFF"
                android:angle="315" />
            <stroke
                android:width="6dp"
                android:color="@color/transparent"/>
        </shape>
    </item>
</selector>
